# class ProtDatasetTrain(Dataset):
#     def __init__(self):

def conv_block(input_size, output_size):
    block = nn.Sequential(
        nn.Conv3d(input_size, output_size, 5, stride=1, padding=1),
        nn.ReLU(),
        nn.BatchNorm3d(output_size),
        nn.MaxPool3d(3)
    )


class Model(nn.Module):
    def __init__(self):
        super(Model, self).__init__()
        self.conv1 = conv_block(8, 32)
        self.conv2 = conv_block(32, 64)
        self.conv3 = conv_block(64, 128)


def forward(self, x):
    # Convolution blocks to be performed on the protein
    x[1] = self.conv1(x[1])
    x[1] = self.conv2(x[1])
    x[1] = self.conv3(x[1])


    # Convolution blocks to be performed on the ligand
    x[0] = self.conv1(x[0])
    x[0] = self.conv2(x[0])

